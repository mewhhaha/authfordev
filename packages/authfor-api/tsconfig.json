{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "preserveSymlinks": false,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": ["src"]
}
